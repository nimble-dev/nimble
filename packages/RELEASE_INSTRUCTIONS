types="compareMCMCs copy declare distributions dsl_dists filtering getParam getDependencies math mcem mcmc models setData size trunc user"
for type in $types; do
Rscript -e "library(nimble); library(methods); library(testthat); test_package('nimble','$type')" >> /tmp/test-results-v${VERSION}
done


